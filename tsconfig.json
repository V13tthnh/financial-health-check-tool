{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/Results/Tab2Content.tsx", "src/components/Results/Tab1Content.tsx", "src/components/Results/CurrentFinancialSituation.tsx", "src/components/Results/FeedbackCard.tsx", "src/components/Results/InvestmentOptions.tsx", "src/lib/FinancialCalculations.ts", "src/lib/Constants.ts", "src/components/Form/Step1Form.tsx", "src/components/Form/Step2Form.tsx", "src/components/Form/Step3Form.tsx", "src/components/Form/Step4Form.tsx", "src/components/Form/StepIndicator.jsx"],
  "exclude": ["node_modules"],
  "typeRoots": ["./node_modules/@types", "./src/types"]
}
